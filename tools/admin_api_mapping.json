[
  {
    "controller": "AdminUsersController",
    "baseRoute": "/api/admin/adminusers",
    "authorizedRoles": ["admin"],
    "endpoints": [
      { "method": "GET", "path": "", "desc": "Get all users (filter, paging)", "response": "{ data: AdminUserDto[], pagination: {...} }" },
      { "method": "GET", "path": "{userId}", "desc": "Get user by id", "response": "AdminUserDetailDto" },
      { "method": "POST", "path": "", "desc": "Create user", "body": "CreateUserDto", "response": "AdminUserDto" },
      { "method": "PUT", "path": "{userId}", "desc": "Update user", "body": "UpdateUserDto" },
      { "method": "PATCH", "path": "{userId}/role", "desc": "Update user role", "body": "{ role: string }" },
      { "method": "PATCH", "path": "{userId}/activate", "desc": "Activate account" },
      { "method": "PATCH", "path": "{userId}/deactivate", "desc": "Deactivate account", "body": "{ reason: string }" },
      { "method": "DELETE", "path": "{userId}", "desc": "Soft-delete user" },
      { "method": "POST", "path": "{userId}/reset-password", "desc": "Reset user password (creates audit)" },
      { "method": "GET", "path": "{userId}/activity", "desc": "User activity summary" },
      { "method": "GET", "path": "statistics", "desc": "Global user statistics" },
      { "method": "GET", "path": "{userId}/charging-history", "desc": "Charging history" },
      { "method": "GET", "path": "{userId}/payment-history", "desc": "Payment history" },
      { "method": "GET", "path": "{userId}/statistics", "desc": "User statistics" },
      { "method": "GET", "path": "{userId}/vehicles", "desc": "Get user vehicles" },
      { "method": "GET", "path": "{userId}/staff/stations", "desc": "Station assignments for staff" },
      { "method": "GET", "path": "{userId}/staff/schedule", "desc": "Staff schedule" },
      { "method": "GET", "path": "{userId}/staff/activities", "desc": "Staff recent activities" },
      { "method": "GET", "path": "{userId}/admin/overview", "desc": "Admin overview metrics" },
      { "method": "GET", "path": "{userId}/admin/activity-log", "desc": "Admin activity log" },
      { "method": "GET", "path": "{userId}/admin/permissions", "desc": "Admin permission matrix" },
      { "method": "GET", "path": "{userId}/admin/audit-log", "desc": "Admin audit log" },
      { "method": "GET", "path": "notifications", "desc": "Get notifications" },
      { "method": "POST", "path": "notifications", "desc": "Send notification" },
      { "method": "POST", "path": "notifications/promotions", "desc": "Send promotion" },
      { "method": "PATCH", "path": "notifications/{notificationId}/read", "desc": "Mark notification read" },
      { "method": "GET", "path": "support-requests", "desc": "List support requests" },
      { "method": "GET", "path": "support-requests/{requestId}", "desc": "Support request detail" },
      { "method": "PATCH", "path": "support-requests/{requestId}", "desc": "Update support request" },
      { "method": "POST", "path": "support-requests/{requestId}/reply", "desc": "Reply to support request" },
      { "method": "POST", "path": "support-requests/{requestId}/close", "desc": "Close support request" }
    ]
  },
  {
    "controller": "AdminReportsController",
    "baseRoute": "/api/admin/adminreports",

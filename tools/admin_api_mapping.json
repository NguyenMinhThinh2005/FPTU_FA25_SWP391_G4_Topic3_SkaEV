    "endpoints": [
      { "method": "GET", "path": "revenue", "desc": "Revenue reports", "response": "{ data: RevenueReportDto[], summary: {...} }" },
      { "method": "GET", "path": "usage", "desc": "Usage reports" },
      { "method": "GET", "path": "test-view", "desc": "Debug view access (dev only)" },
      { "method": "GET", "path": "station-performance", "desc": "Station performance metrics" },
      { "method": "GET", "path": "top-stations", "desc": "Top stations by revenue" },
      { "method": "GET", "path": "dashboard", "desc": "Dashboard summary" },
      { "method": "GET", "path": "payment-methods-stats", "desc": "Payment methods stats" },
      { "method": "GET", "path": "revenue/export", "desc": "Export revenue CSV" },
      { "method": "GET", "path": "peak-hours", "desc": "Peak hours analysis" },
      { "method": "GET", "path": "revenue-by-connector", "desc": "Revenue by connector" },
      { "method": "POST", "path": "seed-demo", "desc": "Seed demo data (Development only)" },
      { "method": "GET", "path": "system-health", "desc": "System health metrics" },

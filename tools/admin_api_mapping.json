      { "method": "GET", "path": "stations/{stationId}/monthly", "desc": "Monthly analytics" },
      { "method": "GET", "path": "stations/{stationId}/yearly", "desc": "Yearly analytics" },
      { "method": "GET", "path": "stations/{stationId}/time-series", "desc": "Time-series data" }
    ]
  },
  {
    "controller": "AdminStationsController",
    "baseRoute": "/api/admin/stations",
    "authorizedRoles": ["admin","staff"],
    "endpoints": [
      { "method": "GET", "path": "", "desc": "List stations (filter/paging)" },
      { "method": "GET", "path": "{stationId}", "desc": "Station detail" },
      { "method": "GET", "path": "{stationId}/realtime", "desc": "Realtime monitoring data" },
      { "method": "POST", "path": "posts/{postId}/control", "desc": "Control charging point", "authorizedRoles": ["admin"] },
      { "method": "POST", "path": "{stationId}/control", "desc": "Control station", "authorizedRoles": ["admin"] },
      { "method": "PUT", "path": "posts/{postId}/config", "desc": "Configure charging point", "authorizedRoles": ["admin"] },
      { "method": "GET", "path": "{stationId}/errors", "desc": "Get station error logs" },
      { "method": "PATCH", "path": "errors/{logId}/resolve", "desc": "Resolve error log", "authorizedRoles": ["admin","staff"] },
      { "method": "POST", "path": "{stationId}/errors", "desc": "Log station error" },
      { "method": "POST", "path": "", "desc": "Create station", "authorizedRoles": ["admin"] },
      { "method": "PUT", "path": "{stationId}", "desc": "Update station", "authorizedRoles": ["admin"] },
      { "method": "DELETE", "path": "{stationId}", "desc": "Delete station", "authorizedRoles": ["admin"] },
      { "method": "POST", "path": "{stationId}/posts", "desc": "Create charging post", "authorizedRoles": ["admin"] },
      { "method": "PUT", "path": "{stationId}/manager", "desc": "Update manager assignment", "authorizedRoles": ["admin"] },
      { "method": "GET", "path": "analytics", "desc": "Legacy station analytics" }
    ]
  },
  {
    "controller": "AdminController",
    "baseRoute": "/api/admin/admin",
    "authorizedRoles": ["admin"],
    "endpoints": [
      { "method": "POST", "path": "reset-all-passwords", "desc": "Reset all admin passwords (dangerous)" }
    ]
  }
]
